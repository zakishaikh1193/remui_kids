<script>
// Scratch Emulator JavaScript
(function() {
    'use strict';
    
    // Wait for iframe to load
    const scratchIframe = document.getElementById('scratch-iframe');
    const loadingElement = document.getElementById('scratch-loading');
    const alternativeElement = document.getElementById('scratch-alternative');
    let iframeLoaded = false;
    
    if (scratchIframe) {
        // Try to load TurboWarp first
        scratchIframe.addEventListener('load', function() {
            // Hide loading, show iframe
            if (loadingElement) {
                loadingElement.style.display = 'none';
            }
            scratchIframe.style.display = 'block';
            iframeLoaded = true;
        });
        
        // If iframe fails to load after 5 seconds, show alternative
        setTimeout(function() {
            if (!iframeLoaded) {
                if (loadingElement) {
                    loadingElement.style.display = 'none';
                }
                if (alternativeElement) {
                    alternativeElement.style.display = 'block';
                }
            }
        }, 5000);
    }
    
    // Get base URL for local Scratch GUI
    const baseUrl = window.location.origin + '/kodeit/iomad/theme/remui_kids/scratch-gui-develop/scratch-gui-develop/build/';
    
    // Update iframe src to use local Scratch GUI
    if (scratchIframe) {
        scratchIframe.src = baseUrl + 'index.html';
    }
    
    // Project selector functionality - Note: For local Scratch GUI, project loading works differently
    const projectSelect = document.getElementById('project-select');
    const loadProjectBtn = document.getElementById('load-project-btn');
    
    if (loadProjectBtn && projectSelect) {
        loadProjectBtn.addEventListener('click', function() {
            const selectedProject = projectSelect.value;
            
            // Show loading
            if (loadingElement) {
                loadingElement.style.display = 'block';
            }
            scratchIframe.style.display = 'none';
            if (alternativeElement) {
                alternativeElement.style.display = 'none';
            }
            
            // For local Scratch GUI, we reload the editor
            // Note: Local Scratch GUI doesn't support URL parameters for loading specific projects
            // Users will need to load projects manually through the File menu
            let scratchUrl = baseUrl + 'index.html';
            
            scratchIframe.src = scratchUrl;
            
            setTimeout(function() {
                if (loadingElement) {
                    loadingElement.style.display = 'none';
                }
                scratchIframe.style.display = 'block';
                
                // Inform user about manual loading
                if (selectedProject !== 'new') {
                    alert('Local Scratch editor loaded! To load example projects:\n1. Click "File" menu in the editor\n2. Choose "Load from your computer"\n3. Select a .sb3 project file');
                }
            }, 2000);
        });
    }
    
    // Save project functionality
    const saveProjectBtn = document.getElementById('save-project-btn');
    if (saveProjectBtn) {
        saveProjectBtn.addEventListener('click', function() {
            alert('Your project is automatically saved in your browser. To save permanently, click "File" > "Save to computer" in the editor.');
        });
    }
    
    // Share project functionality
    const shareProjectBtn = document.getElementById('share-project-btn');
    if (shareProjectBtn) {
        shareProjectBtn.addEventListener('click', function() {
            alert('To share your project:\n1. Click "File" > "Save to computer" to download\n2. Upload to scratch.mit.edu to share with others');
        });
    }
    
})();
</script>

