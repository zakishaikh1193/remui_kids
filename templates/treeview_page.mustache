<script>
document.addEventListener('DOMContentLoaded', function() {
    // Course dropdown functionality
    const courseHeaders = document.querySelectorAll('.course-dropdown-header');
    courseHeaders.forEach(header => {
        header.addEventListener('click', function() {
            const content = this.nextElementSibling;
            const arrow = this.querySelector('.course-dropdown-arrow');
            
            // Toggle active class
            this.classList.toggle('active');
            content.classList.toggle('active');
            arrow.classList.toggle('rotated');
            
            // Close other course dropdowns
            courseHeaders.forEach(otherHeader => {
                if (otherHeader !== this) {
                    otherHeader.classList.remove('active');
                    otherHeader.nextElementSibling.classList.remove('active');
                    otherHeader.querySelector('.course-dropdown-arrow').classList.remove('rotated');
                }
            });
        });
    });
    
    // Lesson dropdown functionality
    const lessonHeaders = document.querySelectorAll('.lesson-dropdown-header');
    lessonHeaders.forEach(header => {
        header.addEventListener('click', function() {
            const content = this.nextElementSibling;
            const arrow = this.querySelector('.lesson-dropdown-arrow');
            
            // Toggle active class
            this.classList.toggle('active');
            content.classList.toggle('active');
            arrow.classList.toggle('rotated');
        });
    });
    
    // Activity start button functionality
    const startButtons = document.querySelectorAll('.activity-start-btn');
    startButtons.forEach(button => {
        button.addEventListener('click', function() {
            const activityItem = this.closest('.activity-item');
            const activityUrl = activityItem.dataset.activityUrl;
            if (activityUrl) {
                window.location.href = activityUrl;
            }
        });
    });
    
    // Course header click to view course
    courseHeaders.forEach(header => {
        header.addEventListener('dblclick', function() {
            const courseId = this.dataset.courseId;
            if (courseId) {
                window.location.href = '/course/view.php?id=' + courseId;
            }
        });
    });
});
</script>