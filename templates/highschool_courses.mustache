                        <div class="stat-card">
                            <div class="stat-icon completed">
                                <i class="fa fa-check-circle"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">{{completed_courses}}</div>
                                <div class="stat-label">Completed</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="stat-card">
                            <div class="stat-icon average">
                                <i class="fa fa-chart-line"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-value">{{average_progress}}%</div>
                                <div class="stat-label">Average Progress</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter and View Options -->
        <div class="courses-filter-section">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="filter-tabs">
                            <button class="filter-tab active" data-filter="all">All Courses</button>
                            <button class="filter-tab" data-filter="in_progress">In Progress</button>
                            <button class="filter-tab" data-filter="completed">Completed</button>
                            <button class="filter-tab" data-filter="not_started">Not Started</button>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="view-options">
                            <button class="view-btn active" data-view="grid">
                                <i class="fa fa-th"></i>
                            </button>
                            <button class="view-btn" data-view="list">
                                <i class="fa fa-list"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Courses by Subject -->
        {{#subjects}}
        <div class="courses-subject-section">
            <div class="container-fluid">
                <div class="subject-header">
                    <h2 class="subject-title">
                        <i class="fa fa-folder-open"></i>
                        {{subject}} ({{count}})
                    </h2>
                </div>
                
                <div class="courses-grid" id="coursesGrid">
                    {{#courses}}
                    <div class="course-card" data-status="{{status}}">
                        <div class="course-image-wrapper">
                            <img src="{{image}}" class="course-image" alt="{{fullname}}">
                            <div class="course-status-badge {{status}}">
                                {{#status}}
                                    {{#completed}}
                                        <i class="fa fa-check-circle"></i> Completed
                                    {{/completed}}
                                    {{#in_progress}}
                                        <i class="fa fa-spinner"></i> In Progress
                                    {{/in_progress}}
                                    {{#not_started}}
                                        <i class="fa fa-play-circle"></i> Not Started
                                    {{/not_started}}
                                {{/status}}
                            </div>
                        </div>
                        
                        <div class="course-content">
                            <div class="course-category">{{category}}</div>
                            <h3 class="course-title">
                                <a href="{{url}}">{{fullname}}</a>
                            </h3>
                            <p class="course-shortname">{{shortname}}</p>
                            
                            <!-- Progress Bar -->
                            <div class="progress-section">
                                <div class="progress-info">
                                    <span>Progress</span>
                                    <span class="progress-percentage">{{progress}}%</span>
                                </div>
                                <div class="progress-bar-container">
                                    <div class="progress-bar-fill" style="width: {{progress}}%"></div>
                                </div>
                            </div>
                            
                            <!-- Course Actions -->
                            <div class="course-actions">
                                <a href="{{url}}" class="btn btn-primary btn-block">
                                    {{#progress}}
                                        {{#completed}}
                                            <i class="fa fa-redo"></i> Review Course
                                        {{/completed}}
                                        {{^completed}}
                                            <i class="fa fa-play"></i> Continue Learning
                                        {{/completed}}
                                    {{/progress}}
                                    {{^progress}}
                                        <i class="fa fa-play"></i> Start Course
                                    {{/progress}}
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/courses}}
                </div>
            </div>
        </div>
        {{/subjects}}

        <!-- No Courses Message -->
        {{^total_courses}}
        <div class="no-courses-section">
            <div class="container-fluid">
                <div class="no-courses-message">
                    <i class="fa fa-book-open"></i>
                    <h3>No Courses Found</h3>
                    <p>You are not enrolled in any courses yet. Contact your administrator to get enrolled in courses.</p>
                </div>
            </div>
        </div>
        {{/total_courses}}

    </div> <!-- End courses-main-content -->
</div> <!-- End highschool-courses-page -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
