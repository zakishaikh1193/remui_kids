{{!
    @template block_myoverview/nav-display-selector

    This template renders display dropdown.

    Example context (json):
    {
        "cards": true,
        "list": false,
        "summary": false
    }
}}
{{! <div class="dropdown"></div> }}
<ul class="nav nav-tabs" role="menu" data-show-active-item data-skip-active-class="true"
    aria-labelledby="displaydropdown">
    {{#layouts}}
    <li class="nav-item">
        <a class="nav-link" href="#" data-display-option="display" data-value="{{id}}" data-pref="{{id}}"
            aria-label="{{arialabel}}" aria-controls="courses-view-{{uniqid}}" role="menuitem"
            {{#active}}aria-current="true" {{/active}}>
            <span class="{{edwicon}}" data-display-option="display" data-value="{{id}}" data-pref="{{id}}"
            aria-label="{{arialabel}}" aria-controls="courses-view-{{uniqid}}" role="menuitem"
            {{#active}}aria-current="true" {{/active}} title="{{id}}"></span>
        </a>
    </li>
    {{/layouts}}
</ul>
