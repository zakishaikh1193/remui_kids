{{!
    Student Courses Page Template
    Displays courses for Grade 1-3 students in a kid-friendly format
}}

{{> theme_remui_kids/common_start}}

<div class="student-courses-page">
    <!-- Student Sidebar -->
    <div class="student-sidebar">
        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="{{dashboard_url}}" class="nav-link">
                        <i class="fa fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{current_url}}" class="nav-link active">
                        <i class="fa fa-book"></i>
                        <span>My Courses</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{grades_url}}" class="nav-link">
                        <i class="fa fa-chart-line"></i>
                        <span>My Grades</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{assignments_url}}" class="nav-link">
                        <i class="fa fa-tasks"></i>
                        <span>Assignments</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{messages_url}}" class="nav-link">
                        <i class="fa fa-envelope"></i>
                        <span>Messages</span>
                    </a>
                </li>
            </ul>
        </nav>
        
        <!-- Sidebar Footer -->
        <div class="sidebar-footer">
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fa fa-user"></i>
                </div>
                <div class="user-details">
                    <div class="user-name">{{user_name}}</div>
                    <div class="user-role">{{user_grade}} Student</div>
                </div>
            </div>
            <div class="sidebar-actions">
                <a href="{{profile_url}}" class="action-btn profile-btn">
                    <i class="fa fa-user-circle"></i>
                    <span>Profile</span>
                </a>
                <a href="{{logout_url}}" class="action-btn logout-btn">
                    <i class="fa fa-sign-out"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>

    <div class="courses-content-area">
    <!-- Page Header -->
    <div class="courses-page-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="fa fa-book-open text-primary me-3"></i>
                        My Courses - {{user_grade}}
                    </h1>
                    <p class="page-subtitle">
                        Welcome {{user_name}}! Here are your {{user_grade}} courses.
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="{{dashboard_url}}" class="btn btn-outline-primary">
                        <i class="fa fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Statistics -->
    <div class="courses-stats">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="stats-card">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="stat-item">
                                    <div class="stat-number">{{total_courses}}</div>
                                    <div class="stat-label">Total Courses</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-item">
                                    <div class="stat-number">{{user_grade}}</div>
                                    <div class="stat-label">Your Grade Level</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-item">
                                    <div class="stat-number">Ready!</div>
                                    <div class="stat-label">Learning Status</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Grid -->
    <div class="courses-grid-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="section-title">
                        <i class="fa fa-graduation-cap text-success me-2"></i>
                        My Courses - {{user_grade}}
                    </h2>
                </div>
            </div>
            
            <div class="courses-grid-container">
                {{#courses}}
                <div class="course-card-grid-item">
                    <div class="course-card-student">
                        <div class="card h-100 shadow-sm border-0">
                            <!-- Course Image Header -->
                            <div class="course-image-wrapper">
                                <img src="{{image}}" class="course-image" alt="{{fullname}}">
                                <div class="course-grade-badge">
                                    {{grade_level}}
                                </div>
                                <div class="course-status-indicator {{#completed}}completed{{/completed}}{{^completed}}{{#in_progress}}in-progress{{/in_progress}}{{^in_progress}}not-started{{/in_progress}}{{/completed}}">
                                    <i class="fa {{#completed}}fa-check-circle{{/completed}}{{^completed}}{{#in_progress}}fa-play-circle{{/in_progress}}{{^in_progress}}fa-circle-o{{/in_progress}}{{/completed}}"></i>
                                </div>
                            </div>
                            
                            <!-- Course Content -->
                            <div class="card-body">
                                <h3 class="course-title">
                                    <a href="{{url}}" class="text-decoration-none">
                                        {{fullname}}
                                    </a>
                                </h3>
                                <p class="course-shortname text-muted mb-2">
                                    {{shortname}}
                                </p>
                                {{#summary}}
                                <p class="course-description">
                                    {{{summary}}}
                                </p>
                                {{/summary}}
                                
                                <!-- Progress Bar -->
                                <div class="progress-section">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="progress-label">Progress</span>
                                        <span class="progress-percentage">{{progress}}%</span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: {{progress}}%" 
                                             aria-valuenow="{{progress}}" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Course Stats -->
                                <div class="course-stats-row">
                                    <div class="stat-item">
                                        <i class="fa fa-book"></i>
                                        <span>{{completed_sections}}/{{total_sections}}</span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fa fa-tasks"></i>
                                        <span>{{completed_activities}}/{{total_activities}}</span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fa fa-star"></i>
                                        <span>{{points_earned}} pts</span>
                                    </div>
                                </div>
                                
                                <!-- Course Action -->
                                <div class="course-action">
                                    {{#completed}}
                                    <a href="{{url}}" class="btn btn-success btn-sm w-100">
                                        <i class="fa fa-check me-2"></i>Review Course
                                    </a>
                                    {{/completed}}
                                    {{^completed}}
                                    {{#in_progress}}
                                    <a href="{{url}}" class="btn btn-primary btn-sm w-100">
                                        <i class="fa fa-play me-2"></i>Continue
                                    </a>
                                    {{/in_progress}}
                                    {{^in_progress}}
                                    <a href="{{url}}" class="btn btn-warning btn-sm w-100">
                                        <i class="fa fa-play me-2"></i>Start Course
                                    </a>
                                    {{/in_progress}}
                                    {{/completed}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/courses}}
            </div>
            
            {{^courses}}
            <!-- No Courses Message -->
            <div class="row">
                <div class="col-md-12">
                    <div class="no-courses-message text-center py-5">
                        <div class="no-courses-icon">
                            <i class="fa fa-book-open fa-5x text-muted mb-4"></i>
                        </div>
                        <h3 class="text-muted mb-3">No Courses Available Yet</h3>
                        <p class="text-muted mb-4">
                            Your teacher will assign courses for {{user_grade}} soon. 
                            Check back later or contact your teacher for more information.
                        </p>
                        <a href="{{dashboard_url}}" class="btn btn-primary">
                            <i class="fa fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
            {{/courses}}
        </div>
    </div>
</div>

