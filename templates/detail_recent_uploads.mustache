                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="filter-controls">
                <select id="sortSelect" class="filter-select">
                    <option value="timecreated">Sort by Upload Date</option>
                    <option value="firstname">Sort by First Name</option>
                    <option value="lastname">Sort by Last Name</option>
                    <option value="username">Sort by Username</option>
                    <option value="email">Sort by Email</option>
                </select>
                <select id="orderSelect" class="filter-select">
                    <option value="DESC">Most Recent First</option>
                    <option value="ASC">Oldest First</option>
                </select>
                <select id="perPageSelect" class="filter-select">
                    <option value="20">20 per page</option>
                    <option value="50">50 per page</option>
                    <option value="100">100 per page</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Uploads Table -->
    <div class="table-container">
        <div class="table-header">
            <h3>Recent Upload History</h3>
            <div class="table-actions">
                <button id="refreshBtn" class="btn-refresh">
                    <i class="fa fa-refresh"></i>
                    Refresh
                </button>
                <button id="uploadNewBtn" class="btn-upload">
                    <i class="fa fa-upload"></i>
                    Upload New
                </button>
            </div>
        </div>
        
        <div class="table-wrapper">
            <table class="uploads-table">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Upload Date</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="uploadsTableBody">
                    <tr>
                        <td colspan="7" class="loading-cell">
                            <div class="loading-spinner">
                                <i class="fa fa-spinner fa-spin"></i>
                                Loading uploads...
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
