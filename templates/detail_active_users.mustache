<script>
let currentPage = 1;
let currentPerPage = 20;
let currentSearch = '';
let currentSort = 'lastaccess';
let currentOrder = 'DESC';
let currentDays = 30;
let totalPages = 1;

document.addEventListener('DOMContentLoaded', function() {
    loadStats();
    loadUsers();
    initializeEventListeners();
});

function initializeEventListeners() {
    document.getElementById('searchBtn').addEventListener('click', handleSearch);
    document.getElementById('searchInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            handleSearch();
        }
    });
    
    document.getElementById('daysSelect').addEventListener('change', function() {
        currentDays = parseInt(this.value);
        currentPage = 1;
        loadUsers();
    });
    
    document.getElementById('sortSelect').addEventListener('change', function() {
        currentSort = this.value;
        loadUsers();
    });
    
    document.getElementById('orderSelect').addEventListener('change', function() {
        currentOrder = this.value;
        loadUsers();
    });
    
    document.getElementById('perPageSelect').addEventListener('change', function() {
        currentPerPage = parseInt(this.value);
        currentPage = 1;
        loadUsers();
    });
    
    document.getElementById('refreshBtn').addEventListener('click', function() {
        loadStats();
        loadUsers();
    });
    
    document.getElementById('exportBtn').addEventListener('click', exportUsers);
    
    document.getElementById('prevPage').addEventListener('click', function() {
        if (currentPage > 1) {
            currentPage--;
            loadUsers();
        }
    });
    
    document.getElementById('nextPage').addEventListener('click', function() {
        if (currentPage < totalPages) {
            currentPage++;
            loadUsers();
        }
    });
}

function handleSearch() {
    currentSearch = document.getElementById('searchInput').value.trim();
    currentPage = 1;
    loadUsers();
}

function loadStats() {
    fetch('{{config.wwwroot}}/theme/remui_kids/admin/detail_active_users.php?action=get_activity_stats')
        .then(response => response.json())
        .then(data => {
            if (data.status === 'success') {
                document.getElementById('active-30-days').textContent = data.stats.active_30_days;
                document.getElementById('active-7-days').textContent = data.stats.active_7_days;
                document.getElementById('active-1-day').textContent = data.stats.active_1_day;
                document.getElementById('online-now').textContent = data.stats.online_now;
            }
        })
        .catch(error => {
            console.error('Error loading stats:', error);
        });
}

function loadUsers() {
    const params = new URLSearchParams({
        action: 'get_active_users',
        page: currentPage,
        per_page: currentPerPage,
        search: currentSearch,
        sort: currentSort,
        order: currentOrder,
        days: currentDays
    });
    
    fetch(`{{config.wwwroot}}/theme/remui_kids/admin/detail_active_users.php?${params}`)
        .then(response => response.json())
        .then(data => {
            if (data.status === 'success') {
                displayUsers(data.users);
                updatePagination(data);
            } else {
                console.error('Error loading users:', data.message);
            }
        })
        .catch(error => {
            console.error('Error loading users:', error);
        });
}

function displayUsers(users) {
    const tbody = document.getElementById('usersTableBody');
    
    if (users.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" class="loading-cell">No active users found</td></tr>';
        return;
    }
    
    tbody.innerHTML = users.map(user => `
        <tr>
            <td>
                <div class="user-name">${user.firstname} ${user.lastname}</div>
            </td>
            <td>
                <div class="user-username">${user.username}</div>
            </td>
            <td>
                <div class="user-email">${user.email}</div>
            </td>
            <td>
                <div class="user-date">${formatDate(user.timeaccess)}</div>
            </td>
            <td>
                <div class="activity-level">
                    <div class="activity-bar">
                        <div class="activity-fill ${getActivityClass(user)}" style="width: ${getActivityWidth(user)}%"></div>
                    </div>
                    <span class="activity-text">${getActivityText(user)}</span>
                </div>
            </td>
            <td>
                <span class="status-badge ${getStatusClass(user)}">${getStatusText(user)}</span>
            </td>
            <td>
                <div class="action-buttons">
                    <button class="btn-action btn-view" onclick="viewUser(${user.id})">
                        <i class="fa fa-eye"></i>
                    </button>
                    <button class="btn-action btn-edit" onclick="editUser(${user.id})">
                        <i class="fa fa-edit"></i>
                    </button>
                </div>
            </td>
        </tr>
    `).join('');
}

function getActivityClass(user) {
    const now = Date.now() / 1000;
    const hoursSinceAccess = (now - user.timeaccess) / 3600;
    
    if (hoursSinceAccess < 1) return 'activity-high';
    if (hoursSinceAccess < 24) return 'activity-medium';
    return 'activity-low';
}

function getActivityWidth(user) {
    const now = Date.now() / 1000;
    const hoursSinceAccess = (now - user.timeaccess) / 3600;
    
    if (hoursSinceAccess < 1) return 100;
    if (hoursSinceAccess < 24) return 75;
    if (hoursSinceAccess < 168) return 50; // 7 days
    return 25;
}

function getActivityText(user) {
    const now = Date.now() / 1000;
    const hoursSinceAccess = (now - user.timeaccess) / 3600;
    
    if (hoursSinceAccess < 1) return 'Very High';
    if (hoursSinceAccess < 24) return 'High';
    if (hoursSinceAccess < 168) return 'Medium';
    return 'Low';
}

function getStatusClass(user) {
    if (user.suspended) return 'status-suspended';
    return 'status-active';
}

function getStatusText(user) {
    if (user.suspended) return 'Suspended';
    return 'Active';
}

function formatDate(timestamp) {
    const date = new Date(timestamp * 1000);
    const now = new Date();
    const diffMs = now - date;
    const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
    const diffDays = Math.floor(diffHours / 24);
    
    if (diffHours < 1) return 'Just now';
    if (diffHours < 24) return `${diffHours}h ago`;
    if (diffDays < 7) return `${diffDays}d ago`;
    return date.toLocaleDateString();
}

function updatePagination(data) {
    totalPages = data.total_pages;
    
    document.getElementById('paginationInfo').textContent = 
        `Showing ${((data.page - 1) * data.per_page) + 1} to ${Math.min(data.page * data.per_page, data.total_count)} of ${data.total_count} active users`;
    
    document.getElementById('prevPage').disabled = currentPage <= 1;
    document.getElementById('nextPage').disabled = currentPage >= totalPages;
    
    // Update page numbers
    const pageNumbers = document.getElementById('pageNumbers');
    pageNumbers.innerHTML = '';
    
    const startPage = Math.max(1, currentPage - 2);
    const endPage = Math.min(totalPages, currentPage + 2);
    
    for (let i = startPage; i <= endPage; i++) {
        const pageBtn = document.createElement('button');
        pageBtn.className = `page-number ${i === currentPage ? 'active' : ''}`;
        pageBtn.textContent = i;
        pageBtn.addEventListener('click', function() {
            currentPage = i;
            loadUsers();
        });
        pageNumbers.appendChild(pageBtn);
    }
}

function viewUser(userId) {
    window.open(`{{config.wwwroot}}/user/profile.php?id=${userId}`, '_blank');
}

function editUser(userId) {
    window.open(`{{config.wwwroot}}/theme/remui_kids/admin/edit_users.php?user_id=${userId}`, '_blank');
}

function exportUsers() {
    alert('Export functionality will be implemented');
}
</script>
